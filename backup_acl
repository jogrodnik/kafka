#!/bin/bash

# CONFIGURATION
BOOTSTRAP_SERVER="your-controller-address:9092"
BACKUP_DIR="/path/to/backup/dir"
mkdir -p "$BACKUP_DIR"

# LOGGING FUNCTION
log() {
    echo "[$(date +'%Y-%m-%d %H:%M:%S')] $1"
}

# BACKUP FUNCTION
backup_acls() {
    BACKUP_FILE="${BACKUP_DIR}/kafka_acls_backup_$(date +'%Y-%m-%d_%H-%M-%S').txt"
    log "Starting Kafka ACL backup..."
    
    kafka-acls.sh --bootstrap-server $BOOTSTRAP_SERVER --list > "$BACKUP_FILE"

    if [ $? -eq 0 ]; then
        log "Backup completed: $BACKUP_FILE"
    else
        log "ERROR: Failed to backup ACLs!"
        exit 1
    fi
}

# RESTORE FUNCTION
restore_acls() {
    if [ -z "$1" ]; then
        log "ERROR: No backup file provided for restore!"
        exit 1
    fi

    BACKUP_FILE="$1"
    log "Starting Kafka ACL restore from $BACKUP_FILE..."

    # Read ACLs and process them
     while IFS= read -r line; do
        # Detect "ResourcePattern(resourceType=TOPIC, name=orders, patternType=PREFIXED)"
        if [[ "$line" =~ ResourcePattern\(resourceType=([^,]+),\ name=([^,]+),\ patternType=([^)]+)\) ]]; then
            RESOURCE_TYPE="${BASH_REMATCH[1]}"
            RESOURCE_NAME="${BASH_REMATCH[2]}"
            PATTERN_TYPE="${BASH_REMATCH[3]}"
            log "üìå Detected Resource - Type: $RESOURCE_TYPE, Name: $RESOURCE_NAME, PatternType: $PATTERN_TYPE"
        fi

        # Detect ACL entry in format: (principal=User:CN-..., host=*, operation=READ, permissionType=ALLOW)
        if [[ "$line" =~ \(principal=([^,]+),\ host=([^,]+),\ operation=([^,]+),\ permissionType=([^)]+)\) ]]; then
            PRINCIPAL="${BASH_REMATCH[1]}"
            HOST="${BASH_REMATCH[2]}"
            OPERATION="${BASH_REMATCH[3]}"
            PERMISSION_TYPE="${BASH_REMATCH[4]}"
            log "üîÑ Restoring ACL - Principal: $PRINCIPAL, Operation: $OPERATION, Host: $HOST, PermissionType: $PERMISSION_TYPE"

            # Apply ACL
            kafka-acls.sh --bootstrap-server $BOOTSTRAP_SERVER --add \
                --allow-principal "$PRINCIPAL" \
                --operation "$OPERATION" \
                --host "$HOST" \
                --resource-type "$RESOURCE_TYPE" \
                --resource-name "$RESOURCE_NAME" \
                --pattern-type "$PATTERN_TYPE"

            if [ $? -eq 0 ]; then
                log "‚úÖ Successfully restored ACL for $PRINCIPAL on $RESOURCE_TYPE:$RESOURCE_NAME"
            else
                log "‚ùå ERROR: Failed to restore ACL for $PRINCIPAL on $RESOURCE_TYPE:$RESOURCE_NAME"
            fi
        fi
    done < "$BACKUP_FILE"

    log "ACL restore completed."
}

# MENU HANDLER
case "$1" in
    backup)
        backup_acls
        ;;
    restore)
        restore_acls "$2"
        ;;
    *)
        echo "Usage: $0 {backup|restore <backup_file>}"
        exit 1
        ;;
esac
